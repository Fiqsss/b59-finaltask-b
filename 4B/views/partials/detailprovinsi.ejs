<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detail Provinsi | b59-finaltask-b Public</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-secondary">
    <div class="container shadow bg-white my-5 p-2 rounded">
      <% if (user) { %>
        <div class="selamat bg-white shadow w-100 my-2 d-flex justify-content-between align-items-center p-2">
          <a class="text-decoration-none text-dark " href="/provinsi">
            <h5 class="d-block my-auto">Test Kompetensi PreClass</h5>
          </a>
          <div class="d-flex justify-content-between p-0 m-0">
            <p class="mx-3 my-auto">Hallo! <span class="text-danger"><%= user.username %></span></p>
            <a class="btn btn-danger" href="/logout">Logout</a>
          </div>
        </div>
      <% } else { %>
        <div class="selamat bg-white shadow w-100 my-2 d-flex justify-content-between align-items-center p-2">
          <a class="text-decoration-none text-dark " href="/provinsi">
            <h5 class="d-block my-auto">Test Kompetensi PreClass</h5>
          </a>
          <a class="btn btn-primary" href="/login">Login</a>
        </div>
      <% } %> 
      
      <div class="row">
        <div class="col-3">
          <div class="image-logo w-100 d-flex justify-content-center shadow">
            <img
              width="200px"
              src="/img/provinsi/<%= provinsi.photo %>"
              alt="<%= provinsi.photo %>"
              class="m-3"
            />
          </div>
        </div>
        <div
          class="col-9 d-flex flex-column justify-content-center align-items-center"
        >
          <div
            class="description shadow w-100 h-100 text-center d-flex flex-column justify-content-center"
          >
            <h1><%= provinsi.nama %></h1>
            <p>Tahun di resmikan : <%= provinsi.diresmikanFormatted %></p>
          </div>
          <div class="btn-wrapper w-100 d-flex justify-content-center mt-2">
            <button
              type="button"
              data-bs-toggle="modal"
              data-bs-target="#edit"
              class="btn btn-warning w-50 mx-2 shadow"
            >
              Edit
            </button>
            <form
              id="deleteForm-<%= provinsi.id %>"
              action="/deleteprovinsi/<%= provinsi.id %>"
              method="POST"
              style="display: none"
            ></form>
            <a
              href="javascript:void(0);"
              onclick="confirmDelete('<%= provinsi.id %>')"
              class="btn btn-danger w-50 mx-2 shadow"
              >Delete</a
            >
          </div>
        </div>
      </div>
    </div>

    <!-- modal Edit -->
    <div id="edit" class="modal fade" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header bg-warning">
            <h1
              class="modal-title fs-5 text-white"
              id="exampleModalToggleLabel2"
            >
              Edit Provinsi
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              action="/editprovinsi/<%= provinsi.id %>"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="mb-3">
                <label for="provinsi" class="form-label">provinsi</label>
                <input
                  value="<%= provinsi.nama %>"
                  id="provinsi"
                  name="nama"
                  type="text"
                  class="form-control"
                />
              </div>
              <div class="mb-3">
                <label for="provinsi" class="form-label">Pulau</label>
                <input
                  value="<%= provinsi.pulau %>"
                  id="pulau"
                  name="pulau"
                  type="text"
                  class="form-control"
                />
              </div>
              <div class="mb-3">
                <label for="diresmikan" class="form-label">Diresmikan</label>
                <input
                  value="<%= provinsi.diresmikanInputFormat %>"
                  id="diresmikan"
                  name="diresmikan"
                  type="date"
                  class="form-control"
                />
              </div>
              <div class="mb-3">
                <label for="photo" class="form-label">Photo</label>
                <input
                onchange="previewImage(event)"
                  id="photo"
                  name="photo"
                  type="file"
                  class="form-control"
                />
              </div>
              <!-- preview -->
              <div class="image-preview-box">
                <label
                  style="cursor: pointer"
                  class="w-100 h-100 d-flex justify-content-center"
                  for="image-upload"
                >
                <img id="image-preview" src="/img/provinsi/<%= provinsi.photo %>" alt="Image Preview" 
                style="max-width: 100%; height: auto; border: 1px solid #ccc; padding: 5px;" />
                </label>
              </div>
              <div class="modal-footer">
                <button
                  class="btn btn-primary w-100"
                  type="submit"
                  data-bs-toggle="modal"
                >
                  Save
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const urlParams = new URLSearchParams(window.location.search);
      function confirmDelete(id) {
        Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this! ",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it!",
        }).then((result) => {
          if (result.isConfirmed) {
            document.getElementById(`deleteForm-${id}`).submit();
          }
        });
      }
    </script>
    <script>
      function previewImage(event) {
        const imageInput = event.target;
        const imagePreviewBox = document.querySelector(".image-preview-box");
        const imageName = document.querySelector(".image-name-container");
        if (imageInput.files && imageInput.files[0]) {
          const reader = new FileReader();
          reader.onload = function (e) {
            console.log(imageInput.files[0].name);
            imagePreviewBox.innerHTML = `<label  class="w-100 d-flex justify-content-center" for="image-upload"> <img id="image-preview" src="${e.target.result}" alt="Image Preview" 
              style="max-width: 100%; height: auto; border: 1px solid #ccc; padding: 5px;" /> </label>`;
            imageName.innerHTML = `<p class="text-primary text-center">${imageInput.files[0].name}</p>`
          };
          reader.readAsDataURL(imageInput.files[0]);
        }
      }
    </script>
  </body>
</html>
